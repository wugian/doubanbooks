<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin" >

        <ImageView
            android:id="@+id/bookImg_iv"
            android:layout_width="@dimen/list_img_width"
            android:layout_height="@dimen/list_img_height"
            android:layout_marginRight="@dimen/small_margin"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bookName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bookName" />

            <TextView
                android:id="@+id/bookAuthor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:textColor="@color/blue"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/bookPrice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/bookPublisher_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="publisher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bookGrade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>