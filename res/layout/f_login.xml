<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcacaca"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginLeft="@dimen/edge_margin"
                    android:layout_marginRight="@dimen/edge_margin"
                    android:layout_marginTop="80dp"
                    android:background="@color/white"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edge_margin"
                        android:text="账号"
                        android:textSize="@dimen/general_text_size" />

                    <EditText
                        android:id="@+id/username_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edit_text_left_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:maxLength="11"
                        android:textSize="@dimen/edit_text_general_size" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginLeft="@dimen/edge_margin"
                    android:layout_marginRight="@dimen/edge_margin"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edge_margin"
                        android:text="密码"
                        android:textSize="@dimen/general_text_size" />

                    <EditText
                        android:id="@+id/password_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edit_text_left_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:maxLength="12" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/list_item_height"
                android:layout_margin="@dimen/edge_margin"
                android:text="登录"
                android:textSize="@dimen/general_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edge_margin"
                android:layout_marginRight="@dimen/edge_margin" >

                <TextView
                    android:id="@+id/forgetPassword_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textSize="@dimen/general_text_size" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/general_text_size" />

                <TextView
                    android:id="@+id/register_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="没有账号"
                    android:textSize="@dimen/general_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>